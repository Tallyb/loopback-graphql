{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "importHelpers": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "outDir": "build",
        "sourceMap": true
    },
    "include": [
        "src/**/*",
        "__tests__/**/*"
    ],
    "typeRoots": [
        "node_modules/@types"
    ]
}
