{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": false,
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": false,
        "pretty": true,
        "removeComments": true,
        "lib": ["es6"],
        "allowJs": true,
        "types": [
            "@types/node",
            "@types/mocha",
            "@types/chai",
            "@types/chai-http"
        ],
        "outDir": "./lib"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "lib"
    ]
}
